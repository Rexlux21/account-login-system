# Project: Password_Generator



import random

# Arrays
lowercase = ['a','b','c','d','e','f','g','h','i','j','k','l','m',
'n','o','p','q','r','s','t','u','v','w','x','y','z']
uppercase = [c.upper() for c in lowercase]
symbols = ['!','@','#','$','%','^','&','*','(',')']
# Get user's name
name = input("Enter your name to include in the password: ")

# Get user choice
print("Choose password type:")
print("1. name only")
print("2. Lowercase + Uppercase")
print("3. name +Lowercase + Uppercase + Symbols")


while True:
    choice = input("Enter 1, 2, or 3: ")
    if choice in ['1','2','3']:
        choice = int(choice)
        break
    else:
        print("Invalid choice, try again.")

# Get password length
while True:
    length_input = input("Enter desired password length: ")
    if length_input.isdigit() and int(length_input) > 0:
        length = int(length_input)
        break
    else:
        print("Please enter a positive number.")


# Select arrays based on choice
arrays = []
if choice == 1:
    arrays = [lowercase]
elif choice == 2:
    arrays = [lowercase, uppercase]
elif choice == 3:
    arrays = [lowercase, uppercase, symbols]

# Calculate how many chars from each array
num_arrays = len(arrays)# count how many arrays are selected by the user
base = length // num_arrays # this divide total length each array get even 
remainder = length % num_arrays # this get the leftover or extra character
distribution = [base] * num_arrays # this create a list with a base that count each arrays even
distribution[-1] += remainder  # add leftover to last array

# Generate random characters
password_chars = []
i = 0
while i < len(arrays):
    arr = arrays[i]
    count = distribution[i]
    while count > 0:
        password_chars.append(random.choice(arr))
        count -= 1
    i += 1

# Shuffle random characters
random.shuffle(password_chars)

# Combine name + random characters
password = name + "".join(password_chars)



print("Generated password:", password)
